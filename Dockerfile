# Use Node slim base image
FROM node:20-slim

# Install dependencies Puppeteer needs (but NOT chromium itself)
RUN apt-get update && apt-get install -y \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libexpat1 \
    libgbm1 \
    libgcc1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpangocairo-1.0-0 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    xdg-utils \
    --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

# WORKDIR, copy package.json
WORKDIR /usr/src/app
COPY package*.json ./

# Install dependencies (this will download the correct Chrome version)
RUN npm ci

COPY . .

EXPOSE 8080

CMD ["npm", "start"]
